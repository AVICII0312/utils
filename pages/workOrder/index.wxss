page{
  padding: 80rpx 40rpx;
  background: #FBFBFB;
  box-sizing: border-box;
}
.container{
  position: relative;
  width: 100%;
  height: 900rpx;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 0 4rpx 12rpx 0 rgba(000, 000, 000, .4);
  overflow: hidden;
}
.container .container_bg{ 
  width: 100%;
  height: 314rpx;
}
.container .container_img{ 
  position: absolute;
  top: 64rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 288rpx;
  height: 278rpx;
}
.options_list{
  margin-top: 90rpx ;
}
.options_list .options{
  margin: 0 auto 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 500rpx;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  background: #007AFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx 0 rgba(000, 000, 000, .4);
  
}
.options_list .options .options_icon{
  margin-right: 10rpx;
  width: 48rpx;
  height: 48rpx;
}