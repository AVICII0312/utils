/**index.wxss**/
page{
  padding-bottom: 130rpx;
}
.sign{
  position: absolute;
  width:100%;
  height:72rpx;
  background-color:#FFF;
  top:20rpx;
  z-index:9999;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.vertical-center {
  display:flex;
  place-items: center;
}

.right {
  flex:1;
  text-align: right;
}

.funtionList{
  justify-content: space-between;
  font-size: 24rpx;
  align-items: center;
  height:154rpx;
  background-color:#fff;
  border-radius:0 0 20rpx 20rpx;
  padding: 0 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,.4);
}

.funtionItem {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.funtionItem .img{
  height: 64rpx;
  width: 64rpx;
}
.funtionItem .label {
  color: #AEAEB2;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.panel {
  width: 660rpx;
  margin: auto;
  margin-bottom: 15rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,.4);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.callout {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 80rpx;
  background: #fff;
  border: 2rpx solid #BBBBBB;
  border-radius: 10rpx;
}

.callout .callout_detail {
  font-size: 24rpx;
  color: #101010;
}

.callout .callout_detail .callout_detail_name {
  margin-bottom: 4rpx;
}


.list {
  margin-top: 40rpx;
}

.divider {
  width: 660rpx;
  margin: auto;
  margin-bottom: 20rpx;
  display: flex;
}

.color-blue {
  font-weight: 700;
  color: #007AFF
}
.color-green {
  font-weight: 700;
  color: #34C758
}
.color-purple {
  font-weight: 700;
  color: #AF52DE
}
.color-yellow {
  font-weight: 700;
  color: #FF9502
}
.color-red {
  font-weight: 700;
  color: #FF2D55
}
.color-cyan {
  color: #5AC8FA;
  font-weight: 700;
}

.plan-detail {
  display:grid;
  width:420rpx;
  grid-template-columns: 1fr 1fr;
  font-size: 24rpx;
  color:#8A8A8A
}

.plan-detail > view {
  line-height: 34rpx;
  margin: 6rpx 0px;
}

.rate {
  display:flex;
  flex-direction: column;
  align-items: center;
  place-items: center;
  height:138rpx;
  font-size: 24rpx;
  padding-top: 26rpx;
}

.list-item {
  border-bottom:1px solid #BBBBBB;
  padding-bottom:20rpx;
  margin-bottom: 20px
}

.reason{
  width:450rpx;

  color: #FF3A30;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.list-item:last-child {
  border-bottom:0px;
  margin-bottom: 0px
}
