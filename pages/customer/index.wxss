.background {
  background: #F2F2F2 !important;
}

.van-search__content {
  background: #fff !important;

}

.section {
  margin-top: 20rpx;
  display: flex;
}

.section .left {
  flex: 1;
  padding: 36rpx 60rpx;
  border: 2rpx solid #BBBBBB;
}

.section .left .head {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section .left .head .text {
  font-size: 28rpx;
  color: #101010;
}

.section .left .head .detail {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #8A8A8A;
}

.section .right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  color: #fff;
  background: #8A8A8A;

}

.btn {
  position: fixed;
  right: 30rpx;
  bottom: 160rpx;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  letter-spacing: 4rpx;
  color: #fff;
  text-align: center;
  background: #23D3FE;
  border-radius: 50%;

}