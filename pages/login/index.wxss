page {
  padding: 40rpx;
  background: #fff;

  box-sizing: border-box;
}

.container {
  position: relative;
  width: 100%;
  height: 570rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.container .container_bg {
  width: 100%;
  height: 314rpx;
}

.container .container_img {
  position: absolute;
  top: 64rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 516rpx;
  height: 500rpx;
}

.container .title {
  position: absolute;
  top: 36rpx;
  left: 24rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

.form {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form .row {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
}

.form .row .label {
  width: 100rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: #101010;
  text-align: justify;
  overflow: hidden;

}

.form .row .label:after {
  display: inline-block;
  content: '';
  width: 100%;
  height: 0;
  overflow: hidden;
}

.form .row .input {
  margin-left: 50rpx;
  padding: 0 20rpx;
  width: 350rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #5AC8FA;
  border-radius: 20rpx;
}

.btn {
  margin: 90rpx auto 0;
  width: 480rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  background: #007AFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx 0 rgba(000, 000, 000, .4);
}

.tip {
  margin-top: 50rpx;
  font-size: 28rpx;
  color: #8CA2AA;
  text-align: center;
}